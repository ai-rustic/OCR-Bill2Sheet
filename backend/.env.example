  # Database connection
  DATABASE_URL=postgresql://username:password@localhost:5432/bill_ocr

  # Optional database pool settings (có thể bỏ qua, sẽ dùng default)
  DATABASE_MAX_CONNECTIONS=10
  DATABASE_ACQUIRE_TIMEOUT=30
  DATABASE_IDLE_TIMEOUT=600
  DATABASE_MAX_LIFETIME=1800

  # Upload Configuration
  MAX_FILE_SIZE_BYTES=2097152
  MAX_IMAGE_COUNT=10

  # Gemini AI API Configuration
  # Required: Google AI Studio API key for OCR functionality
  GEMINI_API_KEY=your_gemini_api_key_here

  # Gemini model to use for vision and text processing
  GEMINI_MODEL=gemini-pro-vision

  # API request timeout in seconds
  GEMINI_TIMEOUT_SECONDS=45

  # Maximum image size allowed for processing (in MB)
  GEMINI_MAX_IMAGE_SIZE_MB=20

  # Gemini API base URL endpoint
  GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
